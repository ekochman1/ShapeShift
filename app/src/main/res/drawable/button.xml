<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1a1e1e" />
            <gradient android:angle="-90" android:startColor="#1a1e1e" android:endColor="#323535"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#323535" />
            <solid android:color="#1a1e1e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1a1e1e" />
            <gradient android:angle="-90" android:startColor="#1a1e1e" android:endColor="#353636" />
        </shape>
    </item>
</selector>
