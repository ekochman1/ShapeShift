<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/bn_Log"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_title"
            android:layout_marginTop="50dp"
            android:text="Health Tracker Log"
            android:background="@drawable/button"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bn_recipes"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/bn_Log"
            android:layout_below="@+id/bn_Log"
            android:layout_marginTop="22dp"
            android:background="@drawable/button"
            android:text="Recipes"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bn_workouts"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/bn_recipes"
            android:layout_below="@+id/bn_recipes"
            android:layout_marginTop="23dp"
            android:background="@drawable/button"
            android:onClick="setWorkouts"
            android:text="Workouts"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bn_healthspots"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/bn_workouts"
            android:layout_below="@+id/bn_workouts"
            android:layout_marginTop="24dp"
            android:text="Health Spots"
            android:background="@drawable/button"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/bn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            app:srcCompat="?android:attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bn_back"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Choose One!"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="36sp" />
    </RelativeLayout>

</RelativeLayout>