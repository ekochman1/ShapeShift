<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calcresults"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:autofillHints="MM/DD/YYYY"
    tools:context="com.example.eddie.shapeshift.CalcResultsActivity">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="103dp"
        android:text="BMI:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="27dp"
        android:text="BMR:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="27dp"
        android:text="WHtR:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="21dp"
        android:text="TDEE:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tddeResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/bmiResult"
        android:text="Total Daily Calorie Expediture"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/whtrResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/tddeResult"
        android:text="Your Waist to Height Ratio"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/bmrResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/whtrResult"
        android:text="Your Basal Metabolic Rate "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/bmiResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/textView5"
        android:text="Your Body Mass Index Value"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView_bmiLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bmiResult"
        android:layout_alignBottom="@+id/bmiResult"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/bmiResult"
        android:text="TextView"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/imageButton_TDEE"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/tddeResult"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/tddeResult"
        android:background="@android:color/holo_blue_light"
        android:onClick="browser4"
        app:srcCompat="@android:drawable/ic_dialog_info" />

    <ImageButton
        android:id="@+id/imageButton_WHtR"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/whtrResult"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/whtrResult"
        android:background="@android:color/holo_blue_light"
        android:onClick="browser3"
        app:srcCompat="@android:drawable/ic_dialog_info" />

    <ImageButton
        android:id="@+id/imageButton_BMR"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/textView5"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/bmrResult"
        android:background="@android:color/darker_gray"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="browser2"
        app:srcCompat="@android:drawable/ic_dialog_info" />

    <ImageButton
        android:id="@+id/imageButton_BMI"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView_bmiLabel"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/textView_bmiLabel"
        android:background="@android:color/darker_gray"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="browser1"
        app:srcCompat="@android:drawable/ic_dialog_info" />

    <Button
        android:id="@+id/delete_bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_Cam"
        android:layout_toEndOf="@+id/add_bn"
        android:text="Delete" />

    <Button
        android:id="@+id/add_bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:text="Add to Log" />

    <ImageView
        android:id="@+id/imageView_Cam"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/add_bn"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginBottom="10dp"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <ImageButton
        android:id="@+id/imageButton_Cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_Cam"
        android:layout_marginBottom="41dp"
        android:layout_toEndOf="@+id/imageView_Cam"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <Button
        android:id="@+id/return_bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/delete_bn"
        android:layout_alignBottom="@+id/delete_bn"
        android:layout_toStartOf="@+id/logview_bn"
        android:onClick="onReturn"
        android:text="Return" />

    <Button
        android:id="@+id/logview_bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/return_bn"
        android:layout_alignBottom="@+id/return_bn"
        android:layout_alignStart="@+id/imageButton_BMR"
        android:text="View Log" />

    <EditText
        android:id="@+id/editText_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton_BMI"
        android:layout_alignEnd="@+id/imageButton_BMR"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="18dp"
        android:autofillHints="(MM/DD/YYYY)"
        android:ems="10"
        android:hint="Date (MM/DD/YYYY)"
        android:inputType="date"
        android:selectAllOnFocus="false"
        android:singleLine="false" />

</RelativeLayout>